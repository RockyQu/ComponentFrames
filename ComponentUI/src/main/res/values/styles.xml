<resources>

    <!-- Base application theme. -->
    <style name="public_AppTheme" parent="@style/Base.Theme.AppCompat" />

    <style name="public_NoActionBar" parent="public_AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="public_anim_activity">
        <item name="android:activityOpenEnterAnimation">@anim/public_default_activity_in</item>
        <item name="android:activityOpenExitAnimation">@anim/public_default_activity_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/public_default_activity_in</item>
        <item name="android:activityCloseExitAnimation">@anim/public_default_activity_out</item>
    </style>

</resources>
