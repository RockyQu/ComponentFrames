<resources>

    <!-- Base application theme. -->
    <style name="public_AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/public_anim_activity</item>
    </style>

    <style name="public_anim_activity">
        <item name="android:activityOpenEnterAnimation">@anim/default_activity_in</item>
        <item name="android:activityOpenExitAnimation">@anim/default_activity_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/default_activity_in</item>
        <item name="android:activityCloseExitAnimation">@anim/default_activity_out</item>
    </style>

</resources>
